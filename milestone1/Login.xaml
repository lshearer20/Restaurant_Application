<Window x:Class="milestone1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:milestone1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138*"/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Height="424" Margin="3,-2,0,-2" VerticalAlignment="Top" Width="788" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="10" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="TabItem">
                <Canvas>
                    <Button Content="Login" HorizontalAlignment="Left" Width="75" VerticalAlignment="Top" Height="30" Canvas.Left="333" Canvas.Top="190"/>
                    <ComboBox x:Name="Users" HorizontalAlignment="Left" VerticalAlignment="Center" Width="194" Height="20" Canvas.Left="275" Canvas.Top="138"/>
                </Canvas>
            </TabItem>
            <TabItem Header="TabItem2"/>
        </TabControl>
    </Grid>
</Window>
