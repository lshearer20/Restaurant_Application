        <TextBox x:Name="bname" HorizontalAlignment="Left" Height="23" Margin="172,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="282" Grid.ColumnSpan="2"/>
        <TextBox x:Name="state"  Height="23" Margin="172,100,366,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="city" HorizontalAlignment="Left" Height="23" Margin="172,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="282" Grid.ColumnSpan="2"/>
