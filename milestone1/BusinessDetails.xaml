        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="379,499,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Column="1" Height="20"/>
        <Label x:Name="Address" Grid.ColumnSpan="2" Content="Address" HorizontalAlignment="Left" Margin="47,159,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="address" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="172,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="282"/>
        <Label x:Name="CurrentDay" Grid.ColumnSpan="2" Content="Today:" HorizontalAlignment="Left" Margin="47,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="currentDay" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="172,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="OpenTime" Grid.ColumnSpan="2" Content="Opens at:" HorizontalAlignment="Left" Margin="47,226,0,0" VerticalAlignment="Top"/>
        <Label x:Name="CloseTime" Grid.ColumnSpan="2" Content="Closes at:" HorizontalAlignment="Left" Margin="47,257,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="openTime" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="172,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="closeTime" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="172,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
