        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Business Name" HorizontalAlignment="Left" Margin="47,66,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="26" Width="90"/>
        <Label Content="State" HorizontalAlignment="Left" Margin="47,97,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" RenderTransformOrigin="0.568,-0.731" Height="26" Width="37"/>
